{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "devDB": "Server=(localdb)\\MSSQLLocalDB;Database=FurnikingDB;Trusted_Connection=True;"
  },
  "AllowedHosts": "*",

  "DB": {
    "UseFakeDatas": "true" // щоб видалити фейкові дані, встановіть значення false і додайте міграцію
  },

  "User": {
    "DefaultRole": "User",
    "Jwt": {
      "SecretKey": "1234567890qazwsxe",
      "Issuer": "authService",
      "Audience": "resourseServer",
      "ExpireDays": "1"
    },
    "Validation": {
      "Password": {
        "RequireDigit": "false",
        "RequireLowercase": "false",
        "RequireNonAlphanumeric": "false",
        "RequireUppercase": "false",
        "RequiredLength": "6",
        "RequiredUniqueChars": "0"
      }
    }
  }
}
